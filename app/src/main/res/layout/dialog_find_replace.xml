<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_find_replace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Найти и заменить"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Поле "Найти" -->
    <EditText
        android:id="@+id/et_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Найти"
        android:inputType="text"
        android:padding="8dp" />

    <!-- Поле "Заменить на" -->
    <EditText
        android:id="@+id/et_replace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Заменить на"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <!-- Игнорировать регистр -->
    <CheckBox
        android:id="@+id/cb_case_insensitive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Игнорировать регистр"
        android:layout_marginTop="12dp" />

    <!-- (AlertDialog будет рисовать кнопки: Найти / Заменить / Отмена) -->
</LinearLayout>
